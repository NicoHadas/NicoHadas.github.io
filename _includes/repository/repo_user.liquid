{% assign lang = site.lang | split: '-' | first %}

{% case lang %}
  {% when 'pt' %}
    {% assign lang = site.lang %}
  {% when 'zh' %}
    {% assign lang_last = site.lang | split: '-' | last %}
    {% case lang_last %}
      {% when 'cn', 'sg', 'my', 'hans' %}
        {% assign lang = 'cn' %}
      {% when 'tw', 'hk', 'mo', 'hant' %}
        {% assign lang = 'zh-tw' %}
    {% endcase %}
{% endcase %}

<div class="repo p-2 text-center" style="min-width: 400px; max-width: 450px; margin: 0 auto;">
  <a href="https://github.com/{{ include.username }}">
    <img
      class="only-light"
      alt="{{ include.username }}"
      src="https://github-readme-stats-nicohadas-projects.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_light }}&locale={{ lang }}&show_icons=true"
    >
    <img
      class="only-dark"
      alt="{{ include.username }}"
      src="https://github-readme-stats-nicohadas-projects.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&locale={{ lang }}&show_icons=true"
    >
  </a>
</div>
